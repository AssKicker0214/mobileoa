<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingLeft="10dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3月15日"
        android:id="@+id/keepupMonthDateText"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="14:22:00"
        android:id="@+id/keepupTimeText"
        android:layout_below="@+id/keepupMonthDateText"
        android:layout_alignRight="@+id/keepupMonthDateText"
        android:layout_alignEnd="@+id/keepupMonthDateText"
        android:textColor="#757575"
        android:textSize="12dp" />

    <ProgressBar
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/progressBar"
        android:layout_marginLeft="84.5dp"
        android:background="@color/keepupBackgroundColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:progress="50"
        android:elevation="-5dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keepup_type"
        android:src="@mipmap/keepup_customer_x54"
        android:translationZ="0dp"
        android:layout_toRightOf="@+id/keepupMonthDateText"
        android:layout_toEndOf="@+id/keepupMonthDateText"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/keepupMonthDateText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="跟进对象"
        android:id="@+id/keepup_targt"
        android:layout_toRightOf="@+id/keepup_type"
        android:layout_toEndOf="@+id/keepup_type"
        android:layout_marginLeft="10dp"
        android:textColor="#757575"
        android:textSize="13dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="跟进者"
        android:id="@+id/keepup_keeper"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@+id/keepupMonthDateText"
        android:layout_marginBottom="5dp"
        android:textColor="#5c6bc0"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/keepup_targt"
        android:layout_alignLeft="@+id/keepup_targt"
        android:layout_alignStart="@+id/keepup_targt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="顺便送客户点纪念品"
            android:id="@+id/keepup_content"
            android:textColor="#424242"
            android:textSize="18dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="false" />
    </RelativeLayout>

</RelativeLayout>