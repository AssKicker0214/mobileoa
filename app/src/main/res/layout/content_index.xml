<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="presentation.index.IndexActivity"
    tools:showIn="@layout/app_bar_index">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#bcaaa4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="0dp">

            <com.andexert.library.RippleView
                android:id="@+id/customerRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#90a4ae"
                android:elevation="0dp"
                android:id="@+id/customerLayout"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerImg"
                    android:background="@mipmap/customer"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:alpha="0.3"
                    android:layout_centerInParent="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="客户"
                        android:id="@+id/customerText"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:visibility="visible"
                        android:enabled="true"
                        android:clickable="true"
                        android:elevation="0dp"
                        android:alpha="0.8"
                        android:textColor="#fbe9e7"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/all_customer_count"
                        android:layout_alignEnd="@+id/all_customer_count"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2"
                        android:id="@+id/my_customer_count"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textAlignment="center"
                        android:alpha="0.5"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:textColor="#ffffff"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="/13"
                        android:id="@+id/all_customer_count"
                        android:textSize="15dp"
                        android:layout_alignBottom="@+id/my_customer_count"
                        android:layout_toRightOf="@+id/my_customer_count"
                        android:layout_toEndOf="@+id/my_customer_count" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="26"
                    android:id="@+id/textView6"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:textSize="52dp" />

            </RelativeLayout>
            </com.andexert.library.RippleView>


            <com.andexert.library.RippleView
                android:id="@+id/contractRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="0.5dp"
                android:layout_marginRight="0.5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffab40"
                android:id="@+id/contractLayout"
                android:elevation="0dp"
                android:focusable="false">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="合同"
                    android:id="@+id/contractText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/contractImg"
                    android:textColor="#fbe9e7" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contractImg"
                    android:background="@mipmap/contract"
                    android:alpha="0.9"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </RelativeLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/contactRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="0.5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e57373"
                android:elevation="0dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="联系人"
                    android:id="@+id/contactText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="18dp"
                    android:layout_below="@+id/imageView2"
                    android:textColor="#fbe9e7" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:background="@mipmap/contact"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:alpha="1"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </RelativeLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="0dp">

            <com.andexert.library.RippleView
                android:id="@+id/oppoRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="0.5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7986cb"
                android:id="@+id/opportunityLayout"
                android:elevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10 / 100， 贡献10%"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="15dp"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/oppo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="商机"
                    android:id="@+id/textView11"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:elevation="0dp"
                    android:alpha="0.8"
                    android:textColor="#fbe9e7"
                    android:layout_below="@+id/imageView8"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/businessRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="0.5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4db6ac"
                android:elevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:background="@mipmap/business"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="业务"
                    android:id="@+id/textView12"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:textColor="#fbe9e7"
                    android:layout_below="@+id/imageView5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView14"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </RelativeLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/productRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a1887f"
                android:elevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/product" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="产品"
                    android:id="@+id/textView13"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:textColor="#fbe9e7"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView15"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:enabled="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </RelativeLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
