<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="presentation.index.IndexActivity"
    tools:showIn="@layout/app_bar_index">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#66bb6a"
                android:elevation="0dp"
                android:id="@+id/customerLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="客户"
                    android:id="@+id/customerText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentTop="false"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:elevation="0dp"
                    android:layout_centerInParent="true"
                    android:alpha="0.8"
                    android:textColor="#fbe9e7"
                    android:layout_below="@+id/customerImg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerImg"
                    android:background="@mipmap/customer"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:alpha="1"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:background="#212121"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:elevation="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9e9d24"
                android:id="@+id/contractLayout"
                android:elevation="10dp"
                android:focusable="false">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="合同"
                    android:id="@+id/contractText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/contractImg"
                    android:textColor="#fbe9e7" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contractImg"
                    android:background="@mipmap/contract"
                    android:alpha="0.9"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:background="#212121"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:elevation="5dp"
                    android:enabled="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#6d4c41"
                android:elevation="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="联系人"
                    android:id="@+id/contactText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:textSize="18dp"
                    android:layout_below="@+id/imageView2"
                    android:textColor="#fbe9e7" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:background="@mipmap/contact"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:alpha="1"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:background="#212121"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:elevation="5dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="0dp">

            <com.andexert.library.RippleView
                android:id="@+id/oppoRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5c6bc0"
                android:id="@+id/opportunityLayout"
                android:elevation="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="商机"
                    android:id="@+id/opportunityText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:height="100dp"
                    android:textSize="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:background="#212121"
                    android:alpha="0.5"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="normal"
                    android:textColor="#ffffff" />
            </RelativeLayout>
            </com.andexert.library.RippleView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9e9e9e"
                android:elevation="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="业务"
                    android:id="@+id/businessText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:height="100dp"
                    android:textSize="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e57373"
                android:elevation="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="产品"
                    android:id="@+id/productText"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="visible"
                    android:enabled="true"
                    android:clickable="true"
                    android:height="100dp"
                    android:textSize="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
