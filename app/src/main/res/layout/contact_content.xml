<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eaf6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_weight="5"

        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="contact name"
        android:id="@+id/smallContactName"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:textSize="22dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/contact_customer_name"
                android:text="南京大学"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="人力资源部"
                android:id="@+id/contact_department_name"
                android:layout_marginLeft="10dp"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smallContactPhone"
        android:layout_weight="0"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/ic_call_white_24dp_x36"
        android:layout_marginRight="10dp"
        android:tint="#f5f5f5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smallContactEmail"
        android:layout_weight="0"
        android:src="@mipmap/ic_email_white_24dp_x36"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"
        android:tint="#f5f5f5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smallContactQQ"
        android:layout_weight="0"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/icon_qq_72dpi_x36"
        android:layout_marginRight="10dp"
        android:tint="#f5f5f5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smallContactWechat"
        android:src="@mipmap/icon_wechat_72dpi_x36"
        android:layout_weight="0"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"
        android:tint="#f5f5f5" />
</LinearLayout>